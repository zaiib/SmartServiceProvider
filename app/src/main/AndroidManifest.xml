<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.serviceprovider.smartserviceprovider">


    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartServiceProvider">
        <activity android:name=".Activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Services.AddServices" />
        <activity android:name=".UserProfile.RegisterSellerActivity" />
        <activity android:name=".UserProfile.ProfileEditUserActivity" />
        <activity android:name=".UserProfile.ProfileEditSellerActivity" />
        <activity android:name=".HomePage.MainUserActivity" />
        <activity android:name=".HomePage.MainSellerActivity" />
        <activity android:name=".UserProfile.ForgotPasswordActivity" />
        <activity android:name=".UserProfile.RegisterUserActivity" />
        <activity android:name=".UserProfile.LoginActivity" />
        <activity android:name=".MainActivity">

        </activity>
    </application>

</manifest>